@page "/"
<PageTitle>Welcome</PageTitle>

<div class="main-content">
    <DxGridLayout CssClass="welcome-gridlayout" RowSpacing="3rem">
        <Rows>
            <DxGridLayoutRow Height="auto" Areas="header"></DxGridLayoutRow>
            <DxGridLayoutRow Height="auto" Areas="body"></DxGridLayoutRow>
            <DxGridLayoutRow Height="auto" Areas="footer"></DxGridLayoutRow>
        </Rows>
        <Items>
            <!-- Header -->
            <DxGridLayoutItem Area="header" CssClass="title">
                <Template>
                    <div class="title-header-text">Welcome to SafeWay Driving School</div>
                    <div class="title-content-text">Your journey to safe and confident driving starts here!</div>
                </Template>
            </DxGridLayoutItem>
            
            <!-- Body -->
            <DxGridLayoutItem Area="body" CssClass="body-content">
                <Template>
                    <div class="body-text">
                        <p>At SafeWay, we offer expert driving lessons to help you master the road. Whether you're a beginner or need a refresher, our experienced instructors are here to guide you.</p>
                        <ul>
                            <li>Comprehensive driving theory and practical lessons</li>
                            <li>Personalized learning plans</li>
                            <li>High success rate in passing driving exams</li>
                        </ul>
                    </div>
                </Template>
            </DxGridLayoutItem>

            <!-- Footer -->
            <DxGridLayoutItem Area="footer" CssClass="footer">
                <Template>
                    <div class="footer-content">
                        <p>&copy; 2025 SafeWay Driving School. All rights reserved.</p>
                        <p>Contact us: <a href="mailto:info@safewaydriving.nl">info@safewaydriving.nl</a> | Phone: +31 123 456 789</p>
                    </div>
                </Template>
            </DxGridLayoutItem>
        </Items>
    </DxGridLayout>
</div>

@code {
    [SupplyParameterFromQuery(Name = UrlGenerator.ToggleSidebarName)]
    public bool ToggledSidebar { get; set; }
}